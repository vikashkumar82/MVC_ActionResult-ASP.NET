
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
</head>
<body>
    <div> 
        <h1 style="text-align:center;color:red;text-decoration:underline;">Register</h1>
        <table align="center">
            <tr>
                <td>Name</td>
                <td><input type="text" id="txtName" /></td>
            </tr>
            <tr>
                <td>User Id</td>
                <td><input type="text" id="txtUid" /></td>
            </tr>
            <tr>
                <td>Password</td>
                <td><input type="password" id="txtPwd" /></td>
            </tr>
            <tr>
                <td>Confirm Password</td>
                <td><input type="password" id="txtCPwd" /></td>
            </tr>
            <tr>
                <td>Mobile</td>
                <td><input type="tel" id="txtMobile" /></td>
            </tr>
            <tr>
                <td>Email Id</td>
                <td><input type="email" id="txtEmail" /></td>
            </tr>
            <tr>
                <td colspan="2" align="center">
                    <input type="button" id="btnRegister" value="Register" />
                    <input type="button" id="btnReset" value="Reset" />
                </td>
            </tr>
        </table>
    </div>
</body>
</html>
