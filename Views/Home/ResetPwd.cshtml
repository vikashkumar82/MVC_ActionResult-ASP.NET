
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ResetPwd</title>
</head>
<body>
    <div>
        <h1 style="text-align:center;color:red;text-decoration:underline;">Reset Password</h1>
        <div style="text-align:center;background-color:aliceblue;">
            <table align="center">
                <tr>
                    <td>New Password</td>
                    <td><input type="password" id="txtPwd" /></td>
                </tr>
                <tr>
                    <td>Confirm Password</td>
                    <td><input type="password" id="txtCPwd" /></td>
                </tr>
                <tr>
                    <td colspan="2">
                        <input type="button" id="btnSubmit" value="Submit" />
                        <input type="button" id="btnReset" value="Reset" />
                    </td>
                    
                </tr>
            </table>
        </div>
    </div>
</body>
</html>
